<view>
  <mp-cells title="套餐名称" >
    <mp-cell>
      <view>
        <input  style="width:400rpx;" class="input item-center" value="{{rentPackage.name}}"/>
      </view>
    </mp-cell>
  </mp-cells>
  <mp-cells title="套餐简介" >
    <mp-cell>
      <view>
        <textarea class="input item-center" style="width: 400rpx;height: 200rpx; " value="{{rentPackage.description}}" ></textarea> 
      </view>
    </mp-cell>
  </mp-cells>
  <mp-cells title="选择分类">
    <mp-cell>
      <tree
        dataTree="{{dataTree}}"
        bind:select="handleSelect"
        isSelectLastNode="true"
        isOpenAll="{{false}}"
        checkBox="{{true}}"
        bind:check="handleCheck"
      ></tree>
    </mp-cell>
  </mp-cells>
  
</view>