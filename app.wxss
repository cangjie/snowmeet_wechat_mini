/**app.wxss**/
@import '/weui.wxss';
@import '/common.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.flex-wrp{
  margin-top: 60rpx;
  display:flex;
}
.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
}
.flex-item-V{
  margin: 0 auto;
  width: 300rpx;
  height: 200rpx;
}
.form-font {
  font-size: 15px;
}
.left-column{
  width:25%;
  text-align: right;
  font-size: 10pt;
  margin-top:20rpx;
}
.right-column{
  width:25%;
  text-align: left;
  font-size: 10pt;
  margin-top:20rpx;
}
.table{
  display: flex;
  flex-direction: row;
}
.ski-pass-title{
  text-align: center;
  font-size: 13pt;
  color:#ffffff;
  background-color: blue;
}
.ski-pass-scale{
  margin-top: 10rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  margin-bottom: 10rpx;
  border-style: solid;
  border-width: 1rpx; 
  border-color: #f0f0f0;
}