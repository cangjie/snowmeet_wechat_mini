/**app.wxss**/
@import '/weui.wxss';
@import '/common.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.flex-wrp{
  margin-top: 60rpx;
  display:flex;
}
.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
}
.flex-item-V{
  margin: 0 auto;
  width: 300rpx;
  height: 200rpx;
}
.form-font {
  font-size: 15px;
}
.view-row{
  display: flex;
  flex-direction: row;
}
.left-column{
  width:25%;
  text-align: right;
  font-size: 10pt;
  margin-top:20rpx;
}
.right-column{
  width:25%;
  text-align: left;
  font-size: 10pt;
  margin-top:20rpx;
}
.table{
  display: flex;
  flex-direction: row;
}
.ski-pass-title{
  text-align: center;
  font-size: 13pt;
  color:#ffffff;
  background-color: blue;
}
.ski-pass-scale{
  margin-top: 10rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  margin-bottom: 10rpx;
  border-style: solid;
  border-width: 1rpx; 
  border-color: #f0f0f0;
}
.input{
  border-color: #c0c0c0; 
  border-style: solid; 
  border-width: 1rpx;
}
button {
  background-color: #f0f0f0;
  border-style: groove;
  border-color: #c5c5c5;
  height: 40px;
  margin-top: 0px;
  padding-top: 0px;
}
.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
}

.weui-tabs-swiper {
  width: 100%;
  height: 10px;
}
.tab-content {
  height: 100px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}
.must-fill-red-dot{
  width: 10rpx;
  color: red;
}
button{
  height: 65rpx;
  padding-top: 10rpx;
  margin-top: 0rpx;
}
.no-margin{
  margin: 0rpx;
}
.no-padding{
  padding: 0rpx;
}